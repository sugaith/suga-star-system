{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "prettier/prettier",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "never"],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "semi": false,
                "trailingComma": "all",
                "singleQuote": true
            },
            {
                "usePrettierrc": false
            }
        ]
    }
}
